@inject BlazorWasm.Client.Services.IBananaService BananaService
@implements IDisposable

<div class="top-menu">
	<img src="icons/I_C_Banana.png" />
	<span class="popover-header">@BananaService.Bananas</span>
</div>

@code {
	[Parameter]
	public int Bananas { get; set; } = 100;

	public void AddBananas(int value)
	{
		Bananas += value;
	}

	public void RemoveBananas(int value)
	{
		Bananas -= value;
	}

	protected override void OnInitialized()
	{
		base.OnInitialized();
		BananaService.OnChange += StateHasChanged;
	}

	public void Dispose()
	{
		BananaService.OnChange -= StateHasChanged;
	}
}
